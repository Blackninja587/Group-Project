<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>


<!-- content for the edit page goes here -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Course Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Course Name"
                    name="course_name" 
                    value="<%= book.course_name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Due Date</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Due Date"
                    name="due_date" 
                    value="<%= book.due_date %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Grade Achieved</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the grade achieved"
                    name="grade_achieved" 
                    value="<%= book.grade_achieved %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descTextField">Total Points</label>
                    <textarea type="text" class="form-control"
                    id="descTextField"
                    placeholder="Enter the total points of the assignment"
                    name="total_points" required>
                    <%= book.total_points %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Comment</label>
                    <input type="number" class="form-control"
                    id="priceTextField"
                    placeholder="Enter a comment"
                    name="comment" 
                    value="<%= book.comment %>"
                    required>
                </div>
                    <br>
                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>

                <a href="/grade-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
